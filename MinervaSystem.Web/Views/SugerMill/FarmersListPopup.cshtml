
@using MinervaSystem.Base.Models
@{
    @Styles.Render("~/Content/datatables")
    @Styles.Render("~/Content/kendo.office365")
}

@Styles.Render("~/Content/datatables")
<link href="~/Content/telerik/kendo.common-material.min.css" rel="stylesheet" />
<link href="~/Content/telerik/kendo.rtl.min.css" rel="stylesheet" />
<link href="~/Content/telerik/kendo.material.min.css" rel="stylesheet" />
<link href="~/Content/telerik/kendo.material.mobile.min.css" rel="stylesheet" />

<style>
     .table > thead > tr > th {
        background: #605ca8;
        color: #fff;
    }

    .form-control {
        height: auto;
    }
        .body-content {
            background-color: #ffffff;
        }
</style>

<div style="margin:0">
    <fieldset>
        <legend>Personal Information</legend>
        <div class='row'>
            <div class='col-sm-2'>
                <div class='form-group'>
                    <label for="user_title">Name</label>
                    <input class="form-control" id="txtName" name="txtName" size="30" type="text" />
                </div>
            </div>
            <div class='col-sm-2'>
                <div class='form-group'>
                    <label for="user_firstname">Mobile No</label>
                    <input class="form-control" id="txtMobileNumber" name="txtMobileNumber" required="true" size="30" type="text" />
                </div>
            </div>
            <div class='col-sm-2'>
                <div class='form-group'>
                    <label for="user_lastname">Member Key</label>
                    <input class="form-control" id="txtMemberKey" name="txtMemberKey" required="true" size="30" type="text" />
                    @*<button type="submit" value="Submit" class="btn btn-default"><i class="fa fa-check-square-o btn-save"></i> Search</button>*@
                </div>
            </div>
            <div class='col-sm-3'>
                <div class="form-group">
                    <label for="" style="visibility:hidden;">dsdsdsdsdsdsdsdsds</label><br>
                    <button type="submit" class="btn btn-primary" onclick="searchFarmers();">Search</button>
                </div>
            </div>
        </div>
    </fieldset>
    <table id="tableFarmerListPopup" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" style="margin:0;width:98%">
        <thead>
            <tr>
                <th>&nbsp;</th>
                <th width="15%">Name</th>
                <th width="20%">Address</th>
                <th width="20%">MObile No</th>
                <th width="20%">National Id No</th>
                <th width="20%">Birth Date</th>
            </tr>
        </thead>
    </table>
</div>
<hr>
@Scripts.Render("~/bundles/DataTables/Allbuttons")
@Scripts.Render("~/bundles/kendo")